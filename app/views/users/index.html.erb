<% @following_post.each do |post| %>
  <div class="post">
    <div class="top-bar">
      <div class="leftside">
        <%= Category.find(post.category_id).name %>
      </div>
      <div class="middle">

        <div class="Name">
          <div class="thumb-prof-pic">

          </div>
          <div class="name">
            <h2><%= User.find(post.author).name %></h2>
            <% if ((Time.now - post.created_at) / 3600).round == 0 %>
            Just now!
            <% else %>
            <%= ((Time.now - post.created_at) / 3600).round  %> hours ago
            <% end %>
          </div>
        </div>
      </div>
      <div class="rightside">
        <!-- menu -->
      </div>
    </div>
    <div class="media ">
      <% if post.image == "" %>
        <img src="http://thecatapi.com/?id=8c6" alt="">
      <%else%>
        <%= link_to image_tag(post.image, class: Category.find(post.category_id).name ), post_path(post.id) %>
      <%end%>
    </div>
    <div class="action">
      <% if @like_post_array.include?(post.id) %>
        <div>
         <button class="like_btn already_liked" data-postid="<%= post.id %>" data-userid="<%= current_user.id %>" data-likeid="<%= Like.find_by(post_id: post.id).id%>">Likes : <%= post.likes.count %></button>
        </div>
      <% else %>
        <div>
         <button class="like_btn not_liked" data-postid="<%= post.id %>" data-userid="<%= current_user.id %>">Likes : <%= post.likes.count %></button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
