<p id="notice"><%= notice %></p>

<% if @user.id == current_user.id %>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Crypted password:</strong>
  <%= @user.crypted_password %>
</p>

<p>
  <strong>Salt:</strong>
  <%= @user.salt %>
</p>

<button type="button" name="get_location" >Click Me!</button>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% else %>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<button type="button" name="follow" data-current="<%= current_user.id %>" data-user="<%= @user.id %>">Follow</button>

<% end %>
